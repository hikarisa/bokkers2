<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <label for="inputName">Title</label>
  <%= f.text_field :title, autofocus: true %>
  <label for="inputImage">Opinion</label>
  <%= f.text_area :body %>
  <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
  <div>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path(@books) %>
  </div>
<% end %>