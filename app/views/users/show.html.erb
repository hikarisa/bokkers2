<p class="flash"><%=   flash[:notice]  %></p>
<%= render 'layouts/sidemenu' %>
  <main>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th> </th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <a href=""><%= image_tag @user.get_profile_image(100,100) %></a>
              </td>
              <td><%= link_to "#{book.title}", book_path %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</main>