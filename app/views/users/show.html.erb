<p class="flash"><%=   flash[:notice]  %></p>
  <main>
        <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
            <table class="table">
              <tbody>
                <tr>
              	  <th>name</th>
              	  <th><%= @user.name %></th>
                </tr>
                <tr>
              	  <th>introduction</th>
              	  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
            </table>

          <div class="row">
            <%= link_to "EDIT", edit_user_path(current_user), class: "btn btn-secondary" %>
          </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, url: '/books', method: :post do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>
          <h4>Opinion</h4>
            <%= f.text_area :body %>
          <%= f.submit '投稿' %>
        <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>

    </div>
  </div>
</div>
      </main>