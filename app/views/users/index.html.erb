<p class="flash"><%=   flash[:notice]  %></p>
<%= render 'layouts/sidemenu' %>
<main>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
       <% @users.each do |user| %>
        <tr>
          <td>
            <a ><%= image_tag @user.get_profile_image(100,100) %></a>
          </td>
          <td><a><%= user.name %></a></td>
          <td><%= link_to "show", user_path(user.id) %></td>
        </tr>
      <% end %>
  </tbody>
</table>

    </div>
  </div>
</div>
      </main>