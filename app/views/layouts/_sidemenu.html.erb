<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
             <th>name</th>
             <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to "EDIT", edit_user_path(current_user), class: "btn btn-secondary" %>
      </div>
      <%= form_with model: @book do |f| %>
        <h2 class="mt-3">New book</h2>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit '投稿' %>
      <% end %>
    </div>
  </div>
</div>