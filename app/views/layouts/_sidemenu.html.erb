<script src="https://kit.fontawesome.com/c8363d6e97.js" crossorigin="anonymous"></script>
<div class="container px-5 px-sm-0">
  <div class="row">

<div class="col-md-3">
            <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
             <th>name</th>
             <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(@user) do %>
          <i class="fa-solid fa-user-gear", "nav-link text-dark","btn btn-outline-secondary btn-block"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      <% end %>
</div>