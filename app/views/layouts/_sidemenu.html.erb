<script src="https://kit.fontawesome.com/c8363d6e97.js" crossorigin="anonymous"></script>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
             <th>name</th>
             <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(@user) do %>
          <i class="fa-solid fa-user-gear", "nav-link text-dark","btn btn-outline-secondary btn-block"></i>
        <% end %>
      </div>
      <% if @book.errors.any? %>
        <div class="error-box">
            <p class="error-red"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
            <ul class="errors">
              <% @book.errors.full_messages.each do |message| %>
                <p class="error-message">ãƒ»<%= message %></p>
              <% end %>
            </ul>
          <% end %>
        </div>
      <%= form_with model: @book do |f| %>
        <h2 class="mt-3">New book</h2>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      <% end %>
    </div>
  </div>
</div>