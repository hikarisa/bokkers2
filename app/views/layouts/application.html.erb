<!DOCTYPE html>
<html>
  <head>
    <script src="https://kit.fontawesome.com/c8363d6e97.js" crossorigin="anonymous"></script>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <% if user_signed_in? %>
          <li class="navbar-brand p-3" ><%= link_to "Bookers", user_path(current_user.id), class: 'nav-link text-dark' %></li>
          <% else %>
          <li class="navbar-brand p-3" ><%= link_to "Bookers", root_path, class: 'nav-link text-dark' %></li>
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to user_path(@user) do %>
                <p class="nav-link text-dark"><i class="fa-solid fa-house-chimney"></i>Home</p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path do %>
                <p class="nav-link text-dark"><i class="fa-solid fa-users"></i>Users</p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to books_path do %>
                <p class="nav-link text-dark"><i class="fa-solid fa-book-open"></i>Books</p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path do %>
                <p class="nav-link text-dark"><i class="fa-solid fa-arrow-right-from-bracket"></i>Log out</p>
              <% end %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to homes_top_path do %>
                <p class="nav-link text-dark"><i class="fa-solid fa-house-chimney"></i>Home</p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to about_path(@user) do %>
                <p class="nav-link text-dark"><i class="fa-solid fa-link"></i>About</p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path(@user) do %>
                <p class="nav-link text-dark"><i class="fa-solid fa-user-plus"></i>Sign up</p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to user_session_path(@user) do %>
                <p class="nav-link text-dark"><i class="fa-solid fa-right-to-bracket"></i>Log in</p>
              <% end %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="mb-auto">
      <%= yield %>
    </main>
    <footer class="bg-dark text-white pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
          </div>
          <div class="col-md-8">
            <h6 class="text-white mt-2 mb-3">CopyRight Infratop.inc</h6>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
